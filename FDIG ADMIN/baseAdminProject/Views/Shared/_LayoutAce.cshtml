@using NavigationRoutes
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <meta name="description" content="" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- basic styles -->
        <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
        <link href="@Url.Content("~/Content/bootstrap-ace/css/bootstrap-responsive.min.css")" rel="stylesheet" />
        <link href="@Url.Content("~/Content/bootstrap-ace/css/font-awesome.min.css")" rel="stylesheet" />
        <link href="@Url.Content("~/Content/bootstrap-ace/css/daterangepicker.css")" rel="stylesheet" type="text/css" />

        <link href="@Url.Content("~/Content/bootstrap-ace/css/ace.css")" rel="stylesheet"/>
        <link href="@Url.Content("~/Content/bootstrap-ace/css/ace.min.css")" rel="stylesheet" />
        <link href="@Url.Content("~/Content/bootstrap-ace/css/ace-rtl.min.css")" rel="stylesheet" />
        <link href="@Url.Content("~/Content/bootstrap-ace/css/jquery-ui.css")" rel="stylesheet" />

        <!--[if IE 7]>
            <link rel="stylesheet" href="assets/css/font-awesome-ie7.min.css" />
        <![endif]-->
        <!-- ace styles -->
        <link href="@Url.Content("~/Content/bootstrap-ace/css/ace-responsive.min.css")" rel="stylesheet" />
        <link href="@Url.Content("~/Content/bootstrap-ace/css/ace-skins.min.css")" rel="stylesheet" />
        <link href="@Url.Content("~/Content/bootstrap-ace/css/datepicker.css")" rel="stylesheet" />
        <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />

        <!--[if lt IE 9]>
            <link rel="stylesheet" href="assets/css/ace-ie.min.css" />
        <![endif]-->
        
        <link href="@Url.Content("~/Content/bootstrap-ace/css/chosen.css")" rel="stylesheet" />
        <link href="@Url.Content("~/Content/jquery.jgrowl.min.css")" rel="stylesheet" />
        @RenderSection("link", required: false)


        <!-- basic scripts -->
        <script src="@Url.Content("~/Scripts/jquery-3.1.1.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Content/bootstrap-ace/js/jquery-ui-1.10.3.custom.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/bootbox.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Content/bootstrap-ace/js/jquery.gritter.min.js")" type="text/javascript"></script>


        <script src="@Url.Content("~/Content/bootstrap-ace/js/jquery.dataTables.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Content/bootstrap-ace/js/jquery.dataTables.bootstrap.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Content/bootstrap-ace/js/chosen.jquery.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Content/bootstrap-ace/js/bootstrap-datepicker.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Content/bootstrap-ace/js/locales/bootstrap-datepicker.es.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Content/bootstrap-ace/js/fuelux.spinner.js")" type="text/javascript"></script>


        <script src="@Url.Content("~/Scripts/jquery.cookie.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.flashmessage.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"></script>

        <script src="@Url.Content("~/Content/bootstrap-ace/js/jquery.easy-pie-chart.min.js")" type="text/javascript"></script>

        <script type="text/javascript" src="@Url.Content("~/Content/bootstrap-ace/js/jquery.maskedinput.min.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Content/bootstrap-ace/js/ace-extra.min.js")"></script>
        <script src="@Url.Content("~/Content/bootstrap-ace/js/ace-elements.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Content/bootstrap-ace/js/ace.min.js")" type="text/javascript"></script>

        <script src="@Url.Content(Nimok.Mvc.Utils.GlobalizeUrls.Globalize)" type="text/javascript"></script>
        <script src="@Url.Content(Nimok.Mvc.Utils.GlobalizeUrls.GlobalizeCulture)" type="text/javascript"></script>

        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.dateFormat-1.0.js")" type="text/javascript"></script>

        <script type="text/javascript">
            $(document).ready(function () {
                //setup globalize
                Globalize.culture("@System.Threading.Thread.CurrentThread.CurrentCulture");
            });
        </script>
        @RenderSection("script", required: false)
    </head>
    <body>
        <div class="navbar navbar-default">
            <div class="navbar-container">
                <div class="navbar-header pull-left">
                    <div class="navbar-brand">
                        <a href="#" class="white ">
                            <small>
                                <i class="icon-leaf"></i>
                                baseAdminProyect
                            </small>
                        </a>
                    </div>
                </div>
                <div class="navbar-header pull-right" role="navigation">
                    <ul class="nav ace-nav">
                        <li class="light-blue">
                            @if (Request.IsAuthenticated)
                            {
                                <a class="user-menu dropdown-toggle white" href="#" data-toggle="dropdown">
                                    <img alt="Foto de @User.Identity.Name" src="@Url.Content("~/Content/bootstrap-ace/avatars/user.jpg")" class="nav-user-photo" />
                                    <span id="user_info">
                                        <small>Bienvenido(a),</small>
                                        @User.Identity.Name
                                    </span>

                                    <i class="icon-caret-down"></i>
                                </a>
                                <ul class="pull-right dropdown-menu dropdown-yellow dropdown-caret dropdown-closer">
                                    <li><a href="#"><i class="icon-cog"></i> Configuración</a></li>
                                    <li><a href="#"><i class="icon-user"></i> Perfil</a></li>
                                    <li class="divider"></li>
                                    <li><a href="@Url.Action("LogOff", "Account")"><i class="icon-lock"></i> Cerrar sesión</a></li>
                                    <li><a href="@Url.Action("About", "Home")">Acerca de</a></li>
                                </ul>

                            }
                            else
                            {
                                <a href="@Url.Action("Login", "Account")"><i class="icon-unlock bigger-160"></i> Ingresar</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container-fluid" id="main-container">
            <a href="#" id="menu-toggler"><span></span></a>
            @if (Request.IsAuthenticated)
            {
                <div id="sidebar">
                    @Html.Navigation()
                </div>

                <div id="main-content" class="clearfix">
                    <div id="page-content" class="clearfix">
                        <div class="page-header">
                            <h1>
                                @ViewBag.Title
                                @if (!string.IsNullOrEmpty(ViewBag.Subtitle))
                                {
                                    <small>
                                        <i class="icon-double-angle-right"></i>
                                        @ViewBag.Subtitle
                                    </small>
                                }
                            </h1>
                        </div>
                        <div class="row-fluid">
                            <!-- PAGE CONTENT BEGINS HERE -->
                            <div class="col-xs-12">
                                <div id="screen-spinner" class="screen-spinner hide open"><h1><i class="icon-spinner icon-spin orange bigger-150"></i></h1></div>
                                @RenderBody()
                            </div>
                            <!-- PAGE CONTENT ENDS HERE -->
                        </div><!--/row-->
                        <div class="row-fluid">
                            <div class="version">
                                <p></p>
                                <div class="content-version">Versión</div>
                            </div>
                        </div>
                    </div><!--/#page-content-->
                </div><!-- #main-content -->
            }
            else
            {
                @*No autenticado*@
                <div class="row-fluid contenido-no-autenticado">
                    <div class="">
                        <div class="page-header position-relative">
                            <h1>
                                @ViewBag.Title
                                @if (!string.IsNullOrEmpty(ViewBag.Subtitle))
                                {
                                    <small>
                                        <i class="icon-double-angle-right"></i>
                                        @ViewBag.Subtitle
                                    </small>
                                }
                            </h1>
                        </div>
                        <div class="row-fluid">
                            <!-- PAGE CONTENT BEGINS HERE -->
                            @RenderBody()
                            <!-- PAGE CONTENT ENDS HERE -->
                        </div><!--/row-->
                    </div>
                </div>
            }
        </div><!--/.fluid-container#main-container-->
    </body>
</html>

